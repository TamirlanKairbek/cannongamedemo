#:kivy 1.0.9

<PongBall>:
    size: 30, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Laser>:
    size: 20, 20
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Level>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<Target>:
    size_hint: None, None
    size: 30, 30
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
